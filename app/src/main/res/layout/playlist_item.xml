<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size196dp"
    android:layout_marginTop="@dimen/size16dp"
    android:background="@color/ed_playlist"
    android:orientation="vertical"
    android:paddingStart="@dimen/size16dp"
    android:paddingEnd="@dimen/size16dp" >

    <androidx.cardview.widget.CardView
        android:id="@+id/playlist_conteiner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size160dp"
        app:cardBackgroundColor="@color/ed_playlist"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">

    <ImageView
        android:id="@+id/playlistImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_stub"
        android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNamePlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tvItemPlaylist"
        tools:text="Summer Party"
        android:layout_marginTop="@dimen/size4dp"/>

    <TextView
        android:id="@+id/countTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tvItemPlaylist"
        tools:text="157 треков"
        />

</LinearLayout>