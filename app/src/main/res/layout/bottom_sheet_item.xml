<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size60dp"
    android:background="@color/ed_playlist"
    android:orientation="horizontal"
    android:paddingStart="@dimen/size14dp"
    android:paddingEnd="@dimen/size14dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/shape_rechtangle_conteiner"
        android:layout_width="@dimen/size44dp"
        android:layout_height="@dimen/size44dp"
        app:cardBackgroundColor="@color/ed_playlist"
        android:layout_marginTop="@dimen/size8dp"
        app:cardElevation="@dimen/size0dp"
        app:cardCornerRadius="@dimen/size8dp">

        <ImageView
            android:id="@+id/trackImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/size8dp"
        android:layout_marginEnd="@dimen/size8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlistName"
            style="@style/namePlaylistItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/countTrack"
            style="@style/infoPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="98 треков" />

    </LinearLayout>

</LinearLayout>