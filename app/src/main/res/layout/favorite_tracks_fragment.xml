<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvFavoriteList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:listitem="@layout/track_list_item"
    android:visibility="gone"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <ImageView
        android:id="@+id/ivPlaceholderFragment"
        style="@style/ivPlaceholderNothingFound"
        android:layout_marginTop="@dimen/size120dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tvPlaceholderMessage"
        style="@style/tvPlaceHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size24dp"
        android:text="@string/your_media_library_is_empty"/>

</LinearLayout>