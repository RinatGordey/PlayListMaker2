<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/styleLinearLayout"
    android:background="@color/backgroundMain"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="@dimen/size_304dp"
        android:layout_height="@dimen/min_height"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/padding_24dp"
        android:layout_marginStart="@dimen/padding_4dp"
        android:layout_marginTop="@dimen/padding_4dp"
        android:paddingStart="@dimen/padding_12dp"
        android:text="@string/playlist_maker"
        android:textColor="@color/title"
        android:textSize="@dimen/text_size"
        android:fontFamily="@font/ys_display_medium"
        >
    </TextView>


    <LinearLayout
        style="@style/styleLinearLayout"
        android:paddingStart="@dimen/left_indentation"
        android:paddingEnd="@dimen/right_indentation"
        android:paddingTop="@dimen/up_indentation"
        android:paddingBottom="@dimen/down_indentation">


        <Button
            android:id="@+id/btSearch"
            android:text="@string/button_search"
            app:icon="@drawable/icon_search"
            style="@style/styleButtom">
        </Button>

        <Button
            android:id="@+id/btMediaLibrary"
            android:text="@string/button_mediateka"
            app:icon="@drawable/icon_media_library"
            app:iconTint="@color/icon"
            style="@style/styleButtom">
        </Button>

        <Button
            android:id="@+id/btSettings"
            android:text="@string/button_settings"
            app:icon="@drawable/icon_settings"
            app:iconTint="@color/icon"
            style="@style/styleButtom">
        </Button>

    </LinearLayout>

</LinearLayout>

