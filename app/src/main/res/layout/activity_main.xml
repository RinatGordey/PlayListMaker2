<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_basic">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/left_indentation"
        android:paddingEnd="@dimen/right_indentation"
        android:paddingTop="@dimen/up_indentation"
        android:paddingBottom="@dimen/down_indentation"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/playlist_maker"
            android:textColor="@color/title"
            android:textSize="@dimen/text_size">

        </TextView>

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@color/backgroundTint_button"
            android:text="@string/button_search"
            android:textColor="@color/text_button"
            android:textSize="@dimen/text_size"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/icon_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_indentation"
            app:iconSize="@dimen/icon_size"
            app:iconTint="@color/icon">

        </Button>

        <Button
            android:id="@+id/button_media_library"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@color/backgroundTint_button"
            android:text="@string/button_mediateka"
            android:textColor="@color/text_button"
            android:textSize="@dimen/text_size"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/icon_media_library"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_indentation"
            app:iconSize="@dimen/icon_size"
            app:iconTint="@color/icon">

        </Button>

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@color/backgroundTint_button"
            android:text="@string/button_settings"
            android:textColor="@color/text_button"
            android:textSize="@dimen/text_size"
            app:cornerRadius="@dimen/corner_radius"
            app:icon="@drawable/icon_settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_indentation"
            app:iconSize="@dimen/icon_size"
            app:iconTint="@color/icon">

        </Button>

    </LinearLayout>


</LinearLayout>

