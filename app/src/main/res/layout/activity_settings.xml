<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="@dimen/size351dp"
        android:layout_height="@dimen/size48dp"
        android:layout_marginLeft="@dimen/size4dp"
        android:layout_marginTop="@dimen/size4dp"
        android:layout_marginBottom="@dimen/size4dp"
        style="@style/panel_header">

        <ImageButton
            android:id="@+id/btBackSet"
            android:layout_width="@dimen/size48dp"
            android:layout_height="@dimen/size48dp"
            style="@style/ic_back"/>

        <TextView
            android:layout_width="@dimen/size208dp"
            android:layout_height="@dimen/size48dp"
            android:layout_marginTop="@dimen/size10dp"
            android:layout_marginBottom="@dimen/size10dp"
            style="@style/tv_panel_header"
            android:text="@string/button_settings"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/size16dp"
        android:paddingTop="@dimen/size14dp"
        android:paddingEnd="@dimen/size16dp"
        android:paddingBottom="@dimen/size14dp">

        <Switch
            android:id="@+id/themeSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size28dp"
            style="@style/tv_style_settings"
            android:text="@string/dark_theme" />

        <TextView
            android:id="@+id/tvShareSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/tv_style_settings"
            android:drawableEnd="@drawable/share"
            android:text="@string/share_app"></TextView>

        <TextView
            android:id="@+id/tvWriteToSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/tv_style_settings"
            android:drawableEnd="@drawable/write_to_support"
            android:text="@string/write_to_support"></TextView>

        <TextView
            android:id="@+id/tvAgreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/tv_style_settings"
            android:drawableEnd="@drawable/agreement"
            android:text="@string/agreement"></TextView>

    </LinearLayout>

</LinearLayout>