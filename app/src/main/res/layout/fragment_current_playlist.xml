<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftBorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/size16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightBorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/size16dp" />

        <ImageView
            android:id="@+id/coverImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_stub2" />

        <ImageButton
            android:id="@+id/btBackImage"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/size24dp"
            android:layout_height="@dimen/size24dp"
            android:layout_marginStart="@dimen/size12dp"
            android:layout_marginTop="@dimen/size12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back"
            app:tint="@color/icon" />

        <TextView
            android:id="@+id/tvPlaylistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size24dp"
            android:fontFamily="@font/ys_display_bold"
            android:textColor="@color/icon"
            android:textFontWeight="700"
            android:textSize="@dimen/size24sp"
            app:layout_constraintStart_toStartOf="@id/leftBorder"
            app:layout_constraintTop_toBottomOf="@+id/coverImageView"
            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size8dp"
            android:layout_marginBottom="@dimen/size30dp"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/icon"
            android:textFontWeight="400"
            android:textSize="@dimen/size18sp"
            app:layout_constraintStart_toStartOf="@id/leftBorder"
            app:layout_constraintTop_toBottomOf="@+id/tvPlaylistName"
            tools:text="2022" />

        <TextView
            android:id="@+id/tvPlaylistDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size8dp"
            android:layout_marginBottom="@dimen/size30dp"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/icon"
            android:textFontWeight="400"
            android:textSize="@dimen/size18sp"
            app:layout_constraintStart_toStartOf="@id/leftBorder"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            tools:text="300 минут" />

        <ImageView
            android:id="@+id/ic"
            android:layout_width="@dimen/size22dp"
            android:layout_height="@dimen/size22dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_playlist_point"
            app:layout_constraintStart_toEndOf="@+id/tvPlaylistDuration"
            app:layout_constraintTop_toTopOf="@+id/tvPlaylistDuration" />

        <TextView
            android:id="@+id/tvTrackCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size8dp"
            android:layout_marginBottom="@dimen/size30dp"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/icon"
            android:textFontWeight="400"
            android:textSize="@dimen/size18sp"
            app:layout_constraintStart_toEndOf="@id/ic"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            tools:text="98 треков" />

        <ImageButton
            android:id="@+id/imBtShare"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/size24dp"
            android:layout_height="@dimen/size24dp"
            android:layout_marginTop="@dimen/size16dp"
            app:layout_constraintStart_toStartOf="@id/leftBorder"
            app:layout_constraintTop_toBottomOf="@+id/tvPlaylistDuration"
            app:srcCompat="@drawable/ic_playlist_share" />

        <ImageButton
            android:id="@+id/imBtMenu"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/size24dp"
            android:layout_height="@dimen/size24dp"
            android:layout_marginStart="@dimen/size16dp"
            android:layout_marginTop="@dimen/size16dp"
            app:layout_constraintStart_toEndOf="@id/imBtShare"
            app:layout_constraintTop_toBottomOf="@+id/tvPlaylistDuration"
            app:srcCompat="@drawable/ic_playlist_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_shape"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/size14dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/size250dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="@dimen/size50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size8dp"
            android:background="@drawable/rectangle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottom_sheet_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size12dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_shape"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/size14dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/size384dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="@dimen/size50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size8dp"
            android:background="@drawable/rectangle" />

        <LinearLayout
            android:id="@+id/track_details"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size60dp"
            android:background="@color/ed_playlist"
            android:orientation="horizontal"
            android:paddingStart="@dimen/size14dp"
            android:paddingEnd="@dimen/size14dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/shape_rechtangle_conteiner"
                android:layout_width="@dimen/size44dp"
                android:layout_height="@dimen/size44dp"
                app:cardBackgroundColor="@color/ed_playlist"
                android:layout_marginTop="@dimen/size8dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/trackCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/nameDescrToBotSheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/size8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/playlistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/ys_display_regular"
                    android:lines="1"
                    android:textColor="@color/text_for_theme"
                    android:textFontWeight="400"
                    android:textSize="@dimen/size16sp"
                    tools:text="Best songs 2021" />

                <TextView
                    android:id="@+id/countTrack"
                    android:textColor="@color/text_for_theme"
                    android:textSize="@dimen/size12sp"
                    android:fontFamily="@font/ys_display_regular"
                    android:textFontWeight="400"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    tools:text="98 треков" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/share_playlists"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size60dp"
            android:background="@color/ed_playlist"
            android:textSize="@dimen/size16sp"
            android:textColor="@color/text_for_theme"
            android:gravity="center_vertical"
            android:textFontWeight="400"
            android:layout_marginStart="@dimen/size16dp"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/Share" />

        <TextView
            android:id="@+id/edit_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size60dp"
            android:background="@color/ed_playlist"
            android:textSize="@dimen/size16sp"
            android:textColor="@color/text_for_theme"
            android:gravity="center_vertical"
            android:textFontWeight="400"
            android:layout_marginStart="@dimen/size16dp"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/Edit_information" />

        <TextView
            android:id="@+id/delete_playlist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size60dp"
            android:background="@color/ed_playlist"
            android:textSize="@dimen/size16sp"
            android:textColor="@color/text_for_theme"
            android:gravity="center_vertical"
            android:textFontWeight="400"
            android:layout_marginStart="@dimen/size16dp"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/Delete_playlist" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>