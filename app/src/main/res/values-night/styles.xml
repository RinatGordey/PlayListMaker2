<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleButtom"> //стиль кнопок для главного меню //темная тема
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_weight" >1</item>
        <item name="android:backgroundTint">@color/backgroundTint_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_indentation</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/icon</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="styleLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="tvStyleSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/min_height</item>
        <item name="android:textSize">@dimen/text_menu_settings</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/icon_gray</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="btStyleSettings" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/title</item>
        <item name="backgroundTint">@color/backgroundMain</item>
        <item name="drawableTint">@color/icon_gray</item>
        <item name="android:minHeight">@dimen/min_height</item>
        <item name="android:layout_height">@dimen/size_48dp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">@dimen/padding_12dp</item>
        <item name="android:layout_width">208dp</item>
        <item name="android:layout_marginStart">@dimen/padding_4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>