<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mediaLibraryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker2.search.ui.activity.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_playerDisplayActivity"
            app:destination="@id/playerDisplayActivity" />
    </fragment>

    <activity
        android:id="@+id/playerDisplayActivity"
        android:name="com.example.playlistmaker2.player.ui.activity.PlayerDisplayActivity"
        android:label="PlayerDisplayActivity" />

    <fragment
        android:id="@+id/mediaLibraryFragment"
        android:name="com.example.playlistmaker2.mediaLibrary.activity.MediaLibraryFragment"
        android:label="fragment_media_library"
        tools:layout="@layout/fragment_media_library" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker2.settings.ui.activity.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>